{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/"]
}
